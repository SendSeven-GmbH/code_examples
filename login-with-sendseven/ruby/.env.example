# SendSeven OAuth2/OIDC Configuration
# Copy this file to .env and fill in your credentials

# =============================================================================
# OAuth App Credentials (Required)
# Get these from the SendSeven dashboard: https://app.sendseven.com/settings/api
# =============================================================================

# Your OAuth application client ID (format: s7_app_...)
SENDSEVEN_CLIENT_ID=s7_app_your_client_id_here

# Your OAuth application client secret (format: s7_secret_...)
# IMPORTANT: Keep this secret! Never commit to version control.
SENDSEVEN_CLIENT_SECRET=s7_secret_your_client_secret_here

# =============================================================================
# API Configuration (Optional)
# =============================================================================

# SendSeven API base URL
# Default: https://api.sendseven.com
# For staging/testing: https://api.msgapi.io
SENDSEVEN_API_URL=https://api.sendseven.com

# =============================================================================
# Application Configuration (Optional)
# =============================================================================

# OAuth callback URL
# This must match exactly what's registered in your OAuth app settings
# Default: http://localhost:3000/callback
REDIRECT_URI=http://localhost:3000/callback

# Server port
# Default: 3000
PORT=3000

# Session secret for encrypting session cookies
# Generate a secure random value (at least 32 characters)
# Example: ruby -e "require 'securerandom'; puts SecureRandom.hex(32)"
# If not set, a random value is generated on each server start
# (which will invalidate all sessions on restart - fine for development)
SESSION_SECRET=your_secure_session_secret_at_least_32_characters_here

# =============================================================================
# Ruby/Rack Environment (Optional)
# =============================================================================

# Set to 'development' for hot reloading, 'production' for production
RACK_ENV=development
